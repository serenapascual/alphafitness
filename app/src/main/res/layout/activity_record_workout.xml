<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/recordWorkoutLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.serenapascual.alphafitness.RecordWorkoutActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/recordTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:text="Record Workout"
                android:textStyle="bold"
                android:textSize="28dp"/>

            <ImageButton
                android:id="@+id/userProfileButton1"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/ic_user_profile"
                android:onClick="viewProfile"/>
        </RelativeLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:stretchColumns="*">
            <TableRow>
                <TextView
                    android:text="DISTANCE"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal">
                </TextView>
                <TextView
                    android:text="DURATION"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="2.6"
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal">

                </TextView>
                <TextView
                    android:text="0:25:52"
                    android:textSize="32dp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal">
                </TextView>
            </TableRow>
            <TableRow>
                <TextView
                    android:text="km"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal">
                </TextView>
                <TextView
                    android:text="Minutes"
                    android:textSize="16dp"
                    android:layout_gravity="center_horizontal">
                </TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:backgroundTint="@color/green"
            android:text="Start Workout"
            android:textColor="@color/white"/>
    </RelativeLayout>
</RelativeLayout>
